        render(<LifeUkTestHomePage />);
      });

      await waitFor(() => {
        expect(global.fetch).toHaveBeenCalledWith(
          "/api/tests?domain=life-in-uk"
        );
      });

      await waitFor(() => {
        expect(
          screen.getByText("Life in UK Practice Test 1")
        ).toBeInTheDocument();
        expect(
          screen.getByText("Life in UK Practice Test 2")
        ).toBeInTheDocument();
